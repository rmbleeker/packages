# {{ ansible_managed }}

[epel-testing]
name=Extra Packages for Enterprise Linux $releasever - $basearch
{% if epel_metalink is defined %}
metalink={{ epel_metalink + 'testing-epel$releasever&arch=$basearch&infra=$infra&content=$contentdir' }}
{% elif epel_baseurl is defined %}
baseurl={{ epel_baseurl + '/testing/$releasever' + ('/Everything' if ansible_distribution_major_version == '8' else '') + '/$basearch' }}
{% endif %}
failovermethod=priority
enabled={{ '1' if epel_enable_testing else '0' }}
gpgcheck={{ '1' if epel_gpgcheck }}
gpgkey={{ epel_gpgkey }}

[epel-testing-debuginfo]
name=Extra Packages for Enterprise Linux $releasever - $basearch - Debug
{% if epel_metalink is defined %}
metalink={{ epel_metalink + 'testing-debug-epel$releasever&arch=$basearch&infra=$infra&content=$contentdir' }}
{% elif epel_baseurl is defined %}
baseurl={{ epel_baseurl + '/testing/$releasever' + ('/Everything' if ansible_distribution_major_version == '8' else '') + '/$basearch/debug' }}
{% endif %}
failovermethod=priority
enabled={{ '1' if (epel_enable_debug and epel_enble_testing) else '0' }}
gpgcheck={{ '1' if epel_gpgcheck }}
gpgkey={{ epel_gpgkey }}

[epel-testing-source]
name=Extra Packages for Enterprise Linux $releasever - $basearch - Source
{% if epel_metalink is defined %}
metalink={{ epel_metalink + 'testing-source-epel$releasever&arch=$basearch&infra=$infra&content=$contentdir' }}
{% elif epel_baseurl is defined %}
baseurl={{ epel_baseurl + '/testing/$releasever' + ('/Everything' if ansible_distribution_major_version == '8' else '') + '/SRPMS' }}
{% endif %}
failovermethod=priority
enabled={{ '1' if (epel_enable_source and epel_enable_testing) else '0' }}
gpgcheck={{ '1' if epel_gpgcheck }}
gpgkey={{ epel_gpgkey }}
